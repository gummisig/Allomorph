@model Tuple<IEnumerable<Allomorph.Models.Comment>, Allomorph.Models.Folder>

<div id="btnSkraAthugasemd" class="btn btn-default">
    <label>
        @Html.ActionLink("Skrá nýja athugasemd", "CreateComment", new { id = Model.Item2.ID })
    </label>
</div>

<table class="table">
    @{ var dummy = Model.Item1.FirstOrDefault(); }
    <tr>
        <th>
            @Html.LabelFor(model => dummy.DateCreated, "Notandi")
        </th>
        <th>
            @Html.LabelFor(model => dummy.CommentText, "Athugasemd")
        </th>
        <th>
            @Html.LabelFor(model => dummy.DateCreated, "Dagsetning")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Item1) {
    <tr>
        <td>
            <span class="glyphicon glyphicon-user"></span>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
