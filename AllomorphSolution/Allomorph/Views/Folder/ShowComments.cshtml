@model Tuple<IEnumerable<Allomorph.Models.Comment>, Allomorph.Models.Folder>

<div class="btnPaddingBottom">
    <input type="submit" value="Skrá nýja athugasemd" class="btn btn-default btn-lg btn-success" onclick="location.href='@Url.Action("CreateComment", "Folder", new { id = Model.Item2.ID })'" />
</div>

<table class="table table-condensed">
    @{ var dummy = Model.Item1.FirstOrDefault(); }
    <tr class="active">
        <th>
            @Html.LabelFor(model => dummy.DateCreated, "Notandi")
        </th>
        <th>
            @Html.LabelFor(model => dummy.CommentText, "Athugasemd")
        </th>
        <th>
            @Html.LabelFor(model => dummy.DateCreated, "Dagsetning")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Item1) {   
    <tr>
        <td>
            <span class="glyphicon glyphicon-user"></span>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td></td>
    </tr>
}
</table>
