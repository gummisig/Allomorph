@model Allomorph.Models.Folder

@{
    ViewBag.Title = "Senda inn";
}

@{ Html.RenderPartial("Search", new Allomorph.Models.SearchViewModel()); }

<h2>Senda inn texta</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryID, "Flokkur:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CategoryID,
                               new List<SelectListItem> {
                                   new SelectListItem { Value = "1", Text = "Kvikmynd" },
                                   new SelectListItem { Value = "2", Text = "Þáttur" },
                                   new SelectListItem { Value = "3", Text = "Teiknimynd" },
                                   new SelectListItem { Value = "4", Text = "Íslenskt efni" }
                               },
                               new { @class = "myselect" })
                @Html.ValidationMessageFor(model => model.CategoryID)
            </div>
        </div>
        
        @*Html.DropDownListFor(
        model => model.Color,
        new SelectList(
        new List<object>
            {
            new { value = 0 , text = "Red"  },
            new { value = 1 , text = "Blue" },
            new { value = 2 , text = "Green"}
            },
            "value",
            "text",
            Model.Color
            )
            )*@

            <div class="form-group">
                @Html.LabelFor(model => model.FolderName, "Nafn:", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FolderName)
                    @Html.ValidationMessageFor(model => model.FolderName)
                </div>
            </div>

            <div class="form-group">
                <input type="file" id="inputfile" />
                <span class="label"></span>
                <div class="col-md-10">
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Link, "Linkur:", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Link)
                    @Html.ValidationMessageFor(model => model.Link)
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Poster, "Plakat:", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Poster)
                    @Html.ValidationMessageFor(model => model.Poster)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, "Lýsing", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
