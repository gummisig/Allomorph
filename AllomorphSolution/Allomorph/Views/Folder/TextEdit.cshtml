@model IList<Allomorph.Models.LinesAndTranslations>

@{
    ViewBag.Title = "TextEdit";
}

@{ Html.RenderPartial("Search", new Allomorph.Models.Folder()); }

<h3>Ritstýring</h3>

<div class="panel panel-default">

    @using (Html.BeginForm("TextEdit",
                            "Folder",
                            FormMethod.Post,
                            new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <table class="table">
            <tbody>
                <tr>
                    <th class="textEditLineNr">Línanúmer</th>
                    <th>Enskur texti</th>
                    <th>Íslenskur Texti</th>
                </tr>

                @for (var s = 0; s < Model.Count(); s++)
                {
                <tr>
                    <td class="textEditLineNr">
                        @Html.DisplayFor(ModelItem => ModelItem[s].LineNr)
                    </td>
                    <td class="textEditTranslation">
                        @Html.TextAreaFor(ModelItem => ModelItem[s].EngText, new { @class = "textEditTranslation" })
                        <input type="submit" value="Uppfæra" class="btn btn-default" />
                        @Html.HiddenFor(ModelItem => ModelItem[s].SubLineId)
                    </td>
                    <td class="textEditTranslation">
                        @Html.TextAreaFor(ModelItem => ModelItem[s].IceText, new { @class = "textEditTranslation" })
                        <input type="submit" value="Uppfæra" class="btn btn-default" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
     }
    <div>
        @Html.ActionLink("Til baka í möppu", "Details")
    </div>
</div>