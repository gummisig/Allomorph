@model IEnumerable<Allomorph.Models.LinesAndTranslations>

@{
    ViewBag.Title = "TextEdit";
}

@{ Html.RenderPartial("Search", new Allomorph.Models.Folder()); }

<h3>Ritstýring</h3>

<div class="panel panel-default">
    <table class="table">
        <tbody>

            @foreach (var s in Model)
            {
                <tr>
                    <td id="textEditLineNr">@Html.DisplayFor(ModelItem => s.LineNr)</td>
                    <td class="textEditTranslation">@Html.TextBoxFor(ModelItem => s.EngText, new { style="width:500px;height:32px;" })</td>
                    <td class="textEditTranslation">@Html.TextBoxFor(ModelItem => s.IceText, new { style="width:500px;height:32px;" })</td>
                </tr>
            }

        </tbody>
    </table>
</div>