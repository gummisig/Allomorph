@model IEnumerable<Allomorph.Models.LinesAndTranslations>

@{
    ViewBag.Title = "TextEdit";
}

@{ Html.RenderPartial("Search", new Allomorph.Models.Folder()); }

<h3>Ritstýring</h3>

<div class="panel panel-default">
    <table class="table">
        <tbody>

            @foreach (var s in Model)
            {
                <tr>
                    <td id="textEditLineNr">@Html.DisplayFor(ModelItem => s.LineNr)</td>
                    <td id="textEditTranslation">@Html.EditorFor(ModelItem => s.EngText)</td>
                    <td class="textEditTranslation">@Html.EditorFor(ModelItem => s.IceText)</td>
                </tr>
            }

        </tbody>
    </table>
</div>