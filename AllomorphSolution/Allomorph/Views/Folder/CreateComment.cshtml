@model Allomorph.Models.Comment

@{
    ViewBag.Title = "Skrá athugasemnd";
}

<h2>Skrá athugasemnd</h2>


@using (Html.BeginForm("CreateComment",
                        "Folder",
                        FormMethod.Post,
                        new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.CommentText, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CommentText)
                @Html.ValidationMessageFor(model => model.CommentText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skrá athugasemnd" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Details")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
