@model Allomorph.Models.Request

@{
    ViewBag.Title = "Upplýsingar um beiðni";
}

<h3>@Model.RequestName</h3>

<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.LabelFor(model => model.RequestName, "Nafn á myndefni:", new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.ActionLink(Model.RequestName, "Create", "Folder", new { requestID = Model.ID }, null)
        </dd>

        <dt>
            @Html.LabelFor(model => model.RequestText, "Lýsing á myndefni:", new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RequestText)
        </dd>

        <dt>
            @Html.LabelFor(model => model.ReqUpvoteCounter, "Atkvæði:", new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            <a href="@Url.Action("RequestVote", "Request", new { requestID = Model.ID })">
                <span id="voteReqBtn" class="glyphicon glyphicon-thumbs-up"></span>
            </a>
            @Html.DisplayFor(model => model.ReqUpvoteCounter)
        </dd>

        <dt>
            @Html.LabelFor(model => model.DateCreated, "Dagsetning:", new { @class = "control-label col-md-2" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Breyta", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Til baka í beiðnir", "Index")
</p>