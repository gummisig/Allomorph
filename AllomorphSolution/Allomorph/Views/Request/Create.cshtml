@model Allomorph.Models.Request

@{
    ViewBag.Title = "Beiðnir";
}

<h3>Senda inn beiðni</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal createForm">
        <br />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.RequestName, "Nafn á myndefni:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RequestName)
                @Html.ValidationMessageFor(model => model.RequestName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RequestText, "Lýsing á beiðni:", new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="textAreaFor">
                @Html.TextAreaFor(model => model.RequestText)
                @Html.ValidationMessageFor(model => model.RequestText)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Búa til" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <input type="submit" value="Til baka í beiðnir" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Request")'" />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}