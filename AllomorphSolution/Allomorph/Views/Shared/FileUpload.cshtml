@model Allomorph.Models.SubFile

<div class="form-group">
    @Html.LabelFor(model => model.LanguageID, "Tungumál:", new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.LanguageID,
                    new List<SelectListItem> {
                    new SelectListItem { Value = "1", Text = "Enska" },
                    new SelectListItem { Value = "2", Text = "Íslenska" }
                    },
                new { @class = "btn btn-default btn-sm dropdown-toggle", style = "width:155px" })
        @Html.ValidationMessageFor(model => model.LanguageID)
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="file" name="file" id="fileupload" /><br />
        <input type="submit" value="Senda inn" class="btn btn-default" />
    </div>
</div>