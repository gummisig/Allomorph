<div id="masterhaus">
    <div id="banner">
        <img src='@Url.Content( "~/Content/logo.png")' />
    </div>
    <div class="input-group" id="leitForm">
        <div id="leit">
            @using (Html.BeginForm("Index", "Folder", FormMethod.Get))
            {
                <p>
                    @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { placeholder = "  Leita...", style = "width:200px;height:32px" })
                    @*<input type="submit" value="Leit..." />*@
                    <button id="btnLeit" class="btn btn-default" type="submit">Leita!</button>
                </p>
            }
        </div>
        <div class="flokkar">
            <span id="movie">
                <input type="checkbox" /><a href="#"> Kvikmyndir</a>
            </span>
            <span class="check" id="episode">
                <input type="checkbox" /><a href="#"> Þættir</a>
            </span>
            <span class="check" id="cartoon">
                <input type="checkbox" /><a href="#"> Teiknimyndir</a>
            </span>
            <span class="check" id="islenskt">
                <input type="checkbox" /><a href="#"> Íslenskt efni</a>
            </span>
        </div>
    </div>
</div>