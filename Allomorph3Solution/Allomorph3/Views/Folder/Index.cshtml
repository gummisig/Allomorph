@model IEnumerable<Allomorph3.Models.Folder>

@{
    ViewBag.Title = "Textar";
}

<h2>Textar</h2>

<p>
    @Html.ActionLink("Senda inn", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FolderName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.FolderName, "Details", new { id = item.FolderID })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FolderID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FolderID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FolderID })
        </td>
    </tr>
}

</table>
